extends layout

block content
    if user
      h1 #{title}
      ul.list-group
        each equipment, i in equipments
          li.list-group-item 
            a(href="/equipment/edit/"+equipment._id)= equipment.type+' : '+equipment.make+' '+equipment.model
            p Notes:
            p=equipment.notes
            p Grade: #{equipment.grade}
            p Active: #{equipment.active}
    else
      h3 Administrators Only
      p Contact RIT if you need to add a system user
