extends layout

block content
    if user
      h1 #{title} 
      form(method='POST', action='/company/edit/'+company._id)
        #form-group
          label Company:
          input.form-control(name='type', type='text', value=company.company)          
        #form-group
          label Code:
          input.form-control(name='make', type='text', value=company.code)
        br
        input.btn.btn-primary(type='submit', value='Submit')
    else
      h3 Administrators Only
      p Contact RIT if you need to add a system user
      