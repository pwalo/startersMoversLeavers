extends layout

block content
    if user
      h1 #{title} 
      form(method='POST', action='/company/add')
        #form-group
          label Company:
          input.form-control(name='company', type='text')          
        #form-group
          label Code:
          input.form-control(name='code', type='number')
        br
        input.btn.btn-primary(type='submit', value='Submit')
    else
      h3 Administrators Only
      p Contact RIT if you need to add a system user
      