extends layout

block content
    if user
      h1 #{title}
      ul.list-group
        each userRole, i in userRoles
          li.list-group-item 
            a(href="/userRoles/edit/"+userRole._id)= userRole.role+' @ '+userRole.company
            p=userRole.description
    else
      h3 Administrators Only
      p Contact RIT if you need to add a system user
          