extends layout

block content
    if user
      h1 #{title}
      ul.list-group
        each employee, i in employees
          li.list-group-item 
            a(href="/employees/edit/"+employee._id)= employee.employeeNR
            p=employee.firstName + ' ' + employee.lastName
    else
      h3 Administrators Only
      p Contact RIT if you need to add a system user
          