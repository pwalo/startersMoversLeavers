extends layout

block content
    if user
      h1 #{title} 
      form(method='POST', action='/site/edit/'+site._id)
        #form-group
          label Site:
          input.form-control(name='site', type='text', value=site.site)          
        #form-group
          label Code:
          input.form-control(name='code', type='text', value=site.code)
        #form-group
          label Company:
          select.form-control(name='company', value=site.company)
            option.form-control(name='company', value=site.company, selected) #{site.company}
            each company, i in companys
              option.form-control(name='company', value=company.code) #{company.code} #{company.company}          
        br
        input.btn.btn-primary(type='submit', value='Submit')
    else
      h3 Administrators Only
      p Contact RIT if you need to add a system user
      